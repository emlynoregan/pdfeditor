{
  "name": "PDF Editor - Fill PDF Forms",
  "short_name": "PDF Editor",
  "description": "Free online PDF editor for filling forms directly in your browser",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#ffffff",
  "theme_color": "#2563eb",
  "orientation": "portrait-primary",
  "lang": "en",
  "categories": ["productivity", "utilities"],
  "icons": [
    {
      "src": "assets/images/favicon.png",
      "sizes": "32x32",
      "type": "image/png"
    },
    {
      "src": "assets/images/favicon.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "assets/images/favicon.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],
  "screenshots": [
    {
      "src": "assets/images/oembed.png",
      "sizes": "1200x630",
      "type": "image/png",
      "form_factor": "wide"
    }
  ],
  "shortcuts": [
    {
      "name": "Upload PDF",
      "short_name": "Upload",
      "description": "Upload a new PDF file to edit",
      "url": "/?action=upload",
      "icons": [
        {
          "src": "assets/images/favicon.png",
          "sizes": "32x32",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "View PDFs",
      "short_name": "View",
      "description": "View and manage your PDF files",
      "url": "/?action=view",
      "icons": [
        {
          "src": "assets/images/favicon.png",
          "sizes": "32x32",
          "type": "image/png"
        }
      ]
    }
  ],
  "features": [
    "client-side PDF processing",
    "form filling",
    "local storage",
    "offline capable"
  ],
  "scope": "/",
  "id": "pdf-editor-app",
  "related_applications": [],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "handle_links": "preferred",
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "share_target": {
    "action": "/",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "files": [
        {
          "name": "pdf",
          "accept": ["application/pdf"]
        }
      ]
    }
  }
} 